<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/bg">
<TableLayout 
            android:layout_height="match_parent" 
            android:id="@+id/tableLayout1" 
            android:layout_width="match_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:background="@drawable/bg">
            
            <TableRow 
            android:id="@+id/tableRow1" 
    		android:layout_width="wrap_content" 
            android:background="@drawable/top_bar"
    		android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView 
            android:textSize="20dip" 
            android:text="Sign In" 
            android:layout_width="200dip" 
            android:layout_height="61dp"
            android:gravity="center"
            android:textStyle="bold"
            >
            </TextView>
            </TableRow>
            
            <TableRow 
            android:id="@+id/tableRow0" 
    		android:layout_width="match_parent" 
    		android:layout_height="wrap_content"
    		android:gravity="center_horizontal">
            <TextView 
            android:textSize="20dip" 
            android:background="@drawable/crime_logo"
            android:layout_width="200dip" 
            android:layout_height="61dp"
            >
            </TextView>
            
            </TableRow>
            <TableRow   android:id="@+id/tableRow1" 
    		android:layout_width="match_parent" 
    		android:layout_height="wrap_content"
    		android:gravity="left">
            <TextView    			
   				android:layout_height="20dip"   
   				android:textSize="20dip"				
  				 android:layout_width="100dp"/>
            </TableRow>
            <TableRow 
            android:id="@+id/tableRow1" 
    		android:layout_width="match_parent" 
    		android:layout_height="wrap_content"
    		android:gravity="left"
    		>
                <TextView android:layout_width="100dp" android:layout_height="25dip" android:textSize="20dip" android:text="E-mail ID:"></TextView>	
  				 </TableRow>
  				 <TableRow >
            <TextView    				
   				android:layout_height="2dip"				
  				 android:layout_width="100dp"/>	
            </TableRow>
            
  				  <TableRow 
            android:id="@+id/tableRow1" 
    		android:layout_width="match_parent" 
    		android:layout_height="wrap_content"
    		android:gravity="center_horizontal"
    		android:background="@drawable/text_input"
    		>
				 <EditText 
  				     android:id="@+id/id"
   				android:textSize="20dip"   						
  				android:layout_width="98dp" 
  				android:layout_height="wrap_content"
  				 android:layout_weight="0.24" 
  				 android:background="@drawable/text_input"
  			/>	
  		
            </TableRow>
            
            <TableRow >
            <TextView    				
   				android:layout_height="30dip"				
  				 android:layout_width="100dp"/>	
            </TableRow>
             <TableRow 
            android:id="@+id/tableRow1" 
    		android:layout_width="match_parent" 
    		android:layout_height="wrap_content"
    		android:gravity="left"
    		>
  				 <TextView    				
   				android:text="Password:"
   				android:layout_height="25dip"   
   				android:textSize="20dip"				
  				 android:layout_width="100dp"/>	
  				 </TableRow>
  				 <TableRow >
            <TextView    				
   				android:layout_height="2dip"				
  				 android:layout_width="100dp"/>	
            </TableRow>
            
            <TableRow 
            android:id="@+id/tableRow2" 
    		android:layout_width="match_parent" 
    		android:layout_height="wrap_content"
    		android:gravity="center_horizontal"
    		android:background="@drawable/text_input">	
    		 
				 <EditText 
  				     android:id="@+id/pass"
   				android:textSize="20dip"   	
  				android:inputType="textPassword"
  				android:layout_height="wrap_content"
  				 android:layout_weight="0.24" 
  				 android:background="@drawable/text_input"
  			/>	
  		
            </TableRow>
            
            <TableRow >
            <TextView    				
   				android:layout_height="30dip"				
  				 android:layout_width="100dp"/>	
            </TableRow>
            <RelativeLayout 
            android:layout_height="wrap_content"				
  				 android:layout_width="match_parent"
  				 android:layout_gravity="center_horizontal">
                  <Button android:layout_width="150dp" android:layout_height="40dp" android:id="@+id/submit" android:background="@drawable/login" android:gravity="center_horizontal" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"></Button>	
  				 
  				 </RelativeLayout>
              <TableRow >
            <TextView    				
   				android:layout_height="10dip"				
  				 android:layout_width="100dp"/>	
            </TableRow>
            
  				
            <TextView    				
   				android:layout_height="10dip"				
  				 android:layout_width="100dp"/>
            <Button android:layout_height="wrap_content" android:textSize="15dip" android:gravity="right" android:layout_width="wrap_content" android:id="@+id/register" android:text="New user? Register here" android:textColor="@android:color/white" android:background="@android:color/transparent"></Button>	
           
  				 
    </TableLayout>
    
</ScrollView>
